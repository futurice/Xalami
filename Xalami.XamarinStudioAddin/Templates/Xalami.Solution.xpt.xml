<?xml version="1.0"?>
<Template>
    <TemplateConfiguration>
        <_Name>Xalami</_Name>
        <Category>other/net/xalami</Category>
        <LanguageName>C#</LanguageName>
        <Icon></Icon>
        <Icon32></Icon32>
        <_Description>A template to kickstart your Xamarin Forms project. Produced with &lt;3 by Futurice.</_Description>
        <DefaultFilename>Xalami</DefaultFilename>
        <FileExtension>.csproj</FileExtension>
    </TemplateConfiguration>
    
    <Actions>
    </Actions>
    
    <Combine name="${ProjectName}" directory=".">		
        <Project name="${ProjectName}" directory="./${ProjectName}" type="C#PortableLibrary">
            <Options Target="Library" TargetFrameworkVersion=".NETPortable,Version=v4.5,Profile=Profile259"/>
            <References>
                <Reference type = "Package" refto="System"/>
            </References>            
            <Files>				<File name="App.xaml" BuildAction="EmbeddedResource" src="Xalami/App.xaml" />
				<File name="App.xaml.cs" AddStandardHeaders="True" src="Xalami/App.xaml.cs" DependsOn="App.xaml" />
				<File name="AppResources/PlatformCulture.cs" DefaultName="PlatformCulture.cs" src="Xalami/AppResources/PlatformCulture.cs" />
				<File name="AppResources/Strings.Designer.cs" DefaultName="Strings.Designer.cs" src="Xalami/AppResources/Strings.Designer.cs" />
				<File name="AppResources/Strings.resx" DefaultName="Strings.resx" src="Xalami/AppResources/Strings.resx" />
				<File name="Behaviors/LabelHideWhenEmptyBehavior.cs" DefaultName="LabelHideWhenEmptyBehavior.cs" src="Xalami/Behaviors/LabelHideWhenEmptyBehavior.cs" />
				<File name="Controls/ItemsStack.cs" DefaultName="ItemsStack.cs" src="Xalami/Controls/ItemsStack.cs" />
				<File name="Converters/EmptyNullToBoolConverter.cs" DefaultName="EmptyNullToBoolConverter.cs" src="Xalami/Converters/EmptyNullToBoolConverter.cs" />
				<File name="ExtensionMethods/LocalTaskExtensions.cs" DefaultName="LocalTaskExtensions.cs" src="Xalami/ExtensionMethods/LocalTaskExtensions.cs" />
				<File name="ExtensionMethods/SynchronizationContextExtensions.cs" DefaultName="SynchronizationContextExtensions.cs" src="Xalami/ExtensionMethods/SynchronizationContextExtensions.cs" />
				<File name="Mvvm/INavigable.cs" DefaultName="INavigable.cs" src="Xalami/Mvvm/INavigable.cs" />
				<File name="Mvvm/IWakeUp.cs" DefaultName="IWakeUp.cs" src="Xalami/Mvvm/IWakeUp.cs" />
				<File name="Mvvm/NavigableViewModelBase.cs" DefaultName="NavigableViewModelBase.cs" src="Xalami/Mvvm/NavigableViewModelBase.cs" />
				<File name="Mvvm/NavigationHost.xaml" BuildAction="EmbeddedResource" src="Xalami/Mvvm/NavigationHost.xaml" />
				<File name="Mvvm/NavigationHost.xaml.cs" AddStandardHeaders="True" src="Xalami/Mvvm/NavigationHost.xaml.cs" DependsOn="NavigationHost.xaml" />
				<File name="Mvvm/NavigationType.cs" DefaultName="NavigationType.cs" src="Xalami/Mvvm/NavigationType.cs" />
				<File name="Mvvm/ViewModelLocator.cs" DefaultName="ViewModelLocator.cs" src="Xalami/Mvvm/ViewModelLocator.cs" />
				<File name="packages.config" DefaultName="packages.config" src="Xalami/packages.config" />
				<File name="Properties/AssemblyInfo.cs" DefaultName="AssemblyInfo.cs" src="Xalami/Properties/AssemblyInfo.cs" />
				<File name="Services/DependencyInterfaces/ILocalizeService.cs" DefaultName="ILocalizeService.cs" src="Xalami/Services/DependencyInterfaces/ILocalizeService.cs" />
				<File name="Services/INavigationService.cs" DefaultName="INavigationService.cs" src="Xalami/Services/INavigationService.cs" />
				<File name="Services/NavigationService.cs" DefaultName="NavigationService.cs" src="Xalami/Services/NavigationService.cs" />
				<File name="Styles/FixedStyleDescendants.xaml" BuildAction="EmbeddedResource" src="Xalami/Styles/FixedStyleDescendants.xaml" />
				<File name="Styles/FixedStyleDescendants.xaml.cs" AddStandardHeaders="True" src="Xalami/Styles/FixedStyleDescendants.xaml.cs" DependsOn="FixedStyleDescendants.xaml" />
				<File name="Styles/FixedStyleKeys.cs" DefaultName="FixedStyleKeys.cs" src="Xalami/Styles/FixedStyleKeys.cs" />
				<File name="ViewModels/MainViewModel.cs" DefaultName="MainViewModel.cs" src="Xalami/ViewModels/MainViewModel.cs" />
				<File name="Views/MainPage.xaml" BuildAction="EmbeddedResource" src="Xalami/Views/MainPage.xaml" />
				<File name="Views/MainPage.xaml.cs" AddStandardHeaders="True" src="Xalami/Views/MainPage.xaml.cs" DependsOn="MainPage.xaml" />
				<File name="XamlExtensions/ImageExtension.cs" DefaultName="ImageExtension.cs" src="Xalami/XamlExtensions/ImageExtension.cs" />
				<File name="XamlExtensions/LocalizeExtension.cs" DefaultName="LocalizeExtension.cs" src="Xalami/XamlExtensions/LocalizeExtension.cs" />
            </Files>
            
            <Packages>
                <Package Id="Xamarin.Forms" version="2.3.3.180"/>
                <Package Id="MvvmLightLibs" version="5.3.0"/>
            </Packages>
        </Project>

        <Project name = "${ProjectName}.Android" directory="./${ProjectName}.Android" type="MonoDroid">
            <Options AndroidApplication = "true" AndroidResgenFile="Resources/Resource.Designer.cs" GenerateSerializationAssemblies="Off"
                     ProductVersion="8.0.30703" SchemaVersion="2.0" AppDesignerFolder="Properties" FileAlignment="512"
                     JavaMaximumHeapSize="1G"/>
            <References>
                <Reference type="Package" refto="mscorlib" />
                <Reference type="Package" refto="System" />
                <Reference type="Package" refto="System.Core" />
                <Reference type="Package" refto="System.Xml" />
                <Reference type="Package" refto="System.Xml.Linq" />
                <Reference type="Package" refto="Mono.Android" />
                <Reference type="Package" refto="Mono.Android.Export" />
                <Reference type="Project" refto="${ProjectName}" />
            </References>            
            <Files>				<File name="Assets/AboutAssets.txt" DefaultName="AboutAssets.txt" src="Android/Assets/AboutAssets.txt" />
				<File name="MainActivity.cs" DefaultName="MainActivity.cs" src="Android/MainActivity.cs" />
				<File name="packages.config" DefaultName="packages.config" src="Android/packages.config" />
				<File name="Properties/AndroidManifest.xml" DefaultName="AndroidManifest.xml" src="Android/Properties/AndroidManifest.xml" />
				<File name="Properties/AssemblyInfo.cs" DefaultName="AssemblyInfo.cs" src="Android/Properties/AssemblyInfo.cs" />
				<File name="Resources/AboutResources.txt" DefaultName="AboutResources.txt" src="Android/Resources/AboutResources.txt" />
				<RawFile name="Resources/drawable/icon.png" src="Android/Resources/drawable/icon.png"/>
				<RawFile name="Resources/drawable-hdpi/icon.png" src="Android/Resources/drawable-hdpi/icon.png"/>
				<RawFile name="Resources/drawable-xhdpi/icon.png" src="Android/Resources/drawable-xhdpi/icon.png"/>
				<RawFile name="Resources/drawable-xxhdpi/icon.png" src="Android/Resources/drawable-xxhdpi/icon.png"/>
				<File name="Resources/layout/Tabbar.axml" DefaultName="Tabbar.axml" src="Android/Resources/layout/Tabbar.axml" />
				<File name="Resources/layout/Toolbar.axml" DefaultName="Toolbar.axml" src="Android/Resources/layout/Toolbar.axml" />
				<File name="Resources/Resource.Designer.cs" DefaultName="Resource.Designer.cs" src="Android/Resources/Resource.Designer.cs" />
				<File name="Resources/values/styles.xml" DefaultName="styles.xml" src="Android/Resources/values/styles.xml" />
				<File name="ServiceImplementations/LocalizeService.cs" DefaultName="LocalizeService.cs" src="Android/ServiceImplementations/LocalizeService.cs" />
            </Files>
            
            <Packages>
                <Package Id="Xamarin.Forms" version="2.3.3.180"/>
                <Package Id="MvvmLightLibs" version="5.3.0"/>
            </Packages>
        </Project>
        
        <Project name="${ProjectName}.iOS" directory="./${ProjectName}.iOS" type="XamarinIOS">
            <Options TargetFrameworkVersion="Xamarin.iOS,Version=v1.0" />
            <References>
                <Reference type="Package" refto="System" />
                <Reference type="Package" refto="System.Core" />
                <Reference type="Package" refto="System.Xml" />
                <Reference type="Package" refto="Xamarin.iOS" />
                <Reference type="Project" refto="${ProjectName}" />
            </References>            
            <Files>				<File name="AppDelegate.cs" DefaultName="AppDelegate.cs" src="iOS/AppDelegate.cs" />
				<File name="Entitlements.plist" DefaultName="Entitlements.plist" src="iOS/Entitlements.plist" />
				<File name="Info.plist" DefaultName="Info.plist" src="iOS/Info.plist" />
				<File name="iTunesArtwork" DefaultName="iTunesArtwork" src="iOS/iTunesArtwork" />
				<File name="iTunesArtwork@2x" DefaultName="iTunesArtwork@2x" src="iOS/iTunesArtwork@2x" />
				<File name="Main.cs" DefaultName="Main.cs" src="iOS/Main.cs" />
				<File name="packages.config" DefaultName="packages.config" src="iOS/packages.config" />
				<File name="Properties/AssemblyInfo.cs" DefaultName="AssemblyInfo.cs" src="iOS/Properties/AssemblyInfo.cs" />
				<RawFile name="Resources/Default.png" src="iOS/Resources/Default.png"/>
				<RawFile name="Resources/Default@2x.png" src="iOS/Resources/Default@2x.png"/>
				<RawFile name="Resources/Default-568h@2x.png" src="iOS/Resources/Default-568h@2x.png"/>
				<RawFile name="Resources/Default-Portrait.png" src="iOS/Resources/Default-Portrait.png"/>
				<RawFile name="Resources/Default-Portrait@2x.png" src="iOS/Resources/Default-Portrait@2x.png"/>
				<RawFile name="Resources/Icon-60@2x.png" src="iOS/Resources/Icon-60@2x.png"/>
				<RawFile name="Resources/Icon-60@3x.png" src="iOS/Resources/Icon-60@3x.png"/>
				<RawFile name="Resources/Icon-76.png" src="iOS/Resources/Icon-76.png"/>
				<RawFile name="Resources/Icon-76@2x.png" src="iOS/Resources/Icon-76@2x.png"/>
				<RawFile name="Resources/Icon-Small.png" src="iOS/Resources/Icon-Small.png"/>
				<RawFile name="Resources/Icon-Small@2x.png" src="iOS/Resources/Icon-Small@2x.png"/>
				<RawFile name="Resources/Icon-Small@3x.png" src="iOS/Resources/Icon-Small@3x.png"/>
				<RawFile name="Resources/Icon-Small-40.png" src="iOS/Resources/Icon-Small-40.png"/>
				<RawFile name="Resources/Icon-Small-40@2x.png" src="iOS/Resources/Icon-Small-40@2x.png"/>
				<RawFile name="Resources/Icon-Small-40@3x.png" src="iOS/Resources/Icon-Small-40@3x.png"/>
				<File name="Resources/LaunchScreen.storyboard" DefaultName="LaunchScreen.storyboard" src="iOS/Resources/LaunchScreen.storyboard" />
				<File name="ServiceImplementations/LocalizeService.cs" DefaultName="LocalizeService.cs" src="iOS/ServiceImplementations/LocalizeService.cs" />
            </Files>
            
            <Packages>
                <Package Id="Xamarin.Forms" version="2.3.3.180"/>
                <Package Id="MvvmLightLibs" version="5.3.0"/>
            </Packages>
        </Project>
        
    </Combine>
</Template>
