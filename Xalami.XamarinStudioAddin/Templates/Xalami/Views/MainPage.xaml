<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:${ProjectName}.Views"
             x:Class="${ProjectName}.Views.MainPage"
             xmlns:ext="clr-namespace:${ProjectName}.XamlExtensions"
             xmlns:bhvrs="clr-namespace:${ProjectName}.Behaviors">

    <Grid>
        <StackLayout Orientation="Vertical"
                     VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Label Text="Welcome to the ${ProjectName}! Here's a localized string: "             
                   HorizontalOptions="CenterAndExpand"
                   HorizontalTextAlignment="Center"
                   LineBreakMode="WordWrap"
                   Style="{DynamicResource SubtitleStyle}"/>
            <Label Text="{ext:LocalizeExtension AppTitle}"
                   HorizontalOptions="CenterAndExpand"
                   HorizontalTextAlignment="Center"
                   LineBreakMode="WordWrap"
                   Style="{DynamicResource SubtitleStyle}"/>
        </StackLayout>              
    </Grid>

</ContentPage>
