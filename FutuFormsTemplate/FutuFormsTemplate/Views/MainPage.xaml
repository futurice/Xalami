<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FutuFormsTemplate.Views"
             x:Class="FutuFormsTemplate.Views.MainPage"
             xmlns:ext="clr-namespace:FutuFormsTemplate.XamlExtensions">

  <StackLayout Orientation="Horizontal"
               VerticalOptions="Center"
           HorizontalOptions="Center">
    <Label Text="Welcome to Xamarin Forms! Here's a localized string: " />
    <Label Text="{ext:LocalizeExtension AppTitle}"/>
  </StackLayout>

</ContentPage>